<Window x:Class="PictionaryMusicalCliente.ExpulsarJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.expulsarTextoExpulsarJugador}"
        Height="300" Width="330"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="280">
                <TextBlock Text="{x:Static language:Lang.expulsarTextoExpulsarJugador}"
                           FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,6" Width="200"/>

                <TextBlock Text="{x:Static language:Lang.expulsarTextoConfirmacion}"
                           FontFamily="Comic Sans MS" FontSize="14"
                           TextAlignment="Center" Margin="0,0,0,10"/>

                <TextBox x:Name="bloqueTextoRazonExpulsion"
                         Height="110" TextWrapping="Wrap" AcceptsReturn="True"
                         FontFamily="Comic Sans MS"
                         Margin="0,0,0,12"
                         Text="{x:Static language:Lang.expulsarTextoRazonExpulsion}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="botonExpulsarJugador"
                            Grid.Column="0" Height="40" Margin="0,0,6,0"
                            Content="{x:Static language:Lang.expulsarTextoExpulsar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Foreground="Red"
                            Background="White" BorderBrush="Black"
                            Click="BotonExpulsarJugador"/>

                    <Button x:Name="botonCancelarExpulsion"
                            Grid.Column="1" Height="40" Margin="6,0,0,0"
                            Content="{x:Static language:Lang.globalTextoCancelar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Click="BotonCancelarExpulsion" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>

