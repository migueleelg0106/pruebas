<Window x:Class="PictionaryMusicalCliente.VentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.principalTextoTitulo}" Height="550" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Fondo cuadriculado -->
        <Grid.Background>
            <VisualBrush TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute"
                         Viewbox="0,0,40,40" ViewboxUnits="Absolute">
                <VisualBrush.Visual>
                    <Rectangle Stroke="LightGray" StrokeThickness="0.5" Width="40" Height="40"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecera: Usuario, Título, Ajustes -->
        <Grid Grid.Row="0" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="0"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Perfil de Usuario -->
            <Button x:Name="botonPerfilUsuario" Content="{x:Static language:Lang.globalTextoUsuario}" Margin="10,28,820,28" Padding="5" Background="White" BorderBrush="Black" FontFamily="Comic Sans MS" Click="BotonPerfil" Grid.Column="1"/>

            <!-- Título Principal -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Height="77" Width="198">
                <TextBlock Text="{x:Static language:Lang.tituloTextoPictionary}" 
                           FontSize="28" FontWeight="Bold" Foreground="Blue"
                           FontFamily="Comic Sans MS" TextAlignment="Center"/>
                <TextBlock Text="{x:Static language:Lang.tituloTextoMusical}" 
                           FontSize="42" FontWeight="Bold" Foreground="Blue"
                           FontFamily="Times New Roman" TextAlignment="Center" Margin="0,-10,0,0"/>
            </StackPanel>

            <!-- Botón de Ajustes -->
            <Button Grid.Column="1" Content="{x:Static language:Lang.globalTextoAjustes}" 
                    FontFamily="Comic Sans MS" Padding="15,5"
                    Background="White" BorderBrush="Black"
                    VerticalAlignment="Center" Height="29" Margin="819,0,0,0"
                    Click="BotonAjustes"/>
        </Grid>

        <!-- Paneles centrales -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Columna Izquierda: Unirse a sala y otros -->
            <StackPanel Grid.Column="0" Margin="10,0">
                <Border Background="White" BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{x:Static language:Lang.globalTextoUnirseASala}" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" FontFamily="Comic Sans MS" Margin="0,0,0,10"/>
                        <TextBlock Text="{x:Static language:Lang.globalTextoIngreseCodigoPartida}" Grid.Row="1" FontFamily="Comic Sans MS" Margin="0,5"/>
                        <TextBox Grid.Row="2" Height="25" FontFamily="Comic Sans MS"/>
                        <Button Content="{x:Static language:Lang.globalTextoUnirse}" Grid.Row="3" Margin="0,15,0,0" Padding="5" FontWeight="Bold" Background="White" BorderBrush="Black" FontFamily="Comic Sans MS" Click="BotonUnirse"/>
                    </Grid>
                </Border>
                <Button Content="{x:Static language:Lang.globalTextoComoJugar}" Margin="0,20,0,0" Padding="10" Background="White" BorderBrush="Black" FontFamily="Comic Sans MS" Click="BotonComoJugar"/>
                <Button Content="{x:Static language:Lang.globalTextoClasificacion}" Margin="0,10,0,0" Padding="10" Background="White" BorderBrush="Black" FontFamily="Comic Sans MS" Click="BotonClasificacion"/>
            </StackPanel>

            <!-- Columna Central: Crear una sala -->
            <Border Background="White" BorderBrush="Black" BorderThickness="2" Padding="20" CornerRadius="3" Margin="306,0,18,33" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{x:Static language:Lang.principalTextoCrearSala}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" FontFamily="Comic Sans MS" Width="164"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Height="152">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Static language:Lang.principalTextoNumeroRondas}" VerticalAlignment="Top" FontFamily="Comic Sans MS" Margin="2,-76,-2,0" Grid.ColumnSpan="3" Height="17"/>
                            <ComboBox SelectedIndex="0" FontFamily="Comic Sans MS" Margin="2,-54,212,56" Grid.ColumnSpan="2" SelectionChanged="CuadroCombinadoSeleccionNumeroRondas">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Static language:Lang.principalTextoTiempoRonda}" VerticalAlignment="Top" FontFamily="Comic Sans MS" Margin="2,-56,78,0"/>
                            <ComboBox SelectedIndex="1" FontFamily="Comic Sans MS" Margin="2,-34,211,36" RenderTransformOrigin="0.468,0.569" SelectionChanged="CuadroCombinadoSeleccionTiempoRonda">
                                <ComboBoxItem Content="60"/>
                                <ComboBoxItem Content="75"/>
                                <ComboBoxItem Content="90"/>
                                <ComboBoxItem Content="120"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Static language:Lang.principalTextoIdiomaCanciones}" VerticalAlignment="Top" FontFamily="Comic Sans MS" Margin="5,-33,75,0"/>
                            <ComboBox SelectedIndex="0" FontFamily="Comic Sans MS" Margin="5,-11,210,13" SelectionChanged="CuadroCombinadoSeleccionIdioma">
                                <ComboBoxItem Content="{x:Static language:Lang.idiomaTextoEspañol}"/>
                                <ComboBoxItem Content="{x:Static language:Lang.idiomaTextoIngles}"/>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Static language:Lang.principalTextoDificultad}" VerticalAlignment="Top" FontFamily="Comic Sans MS" Grid.ColumnSpan="2" Margin="3,-12,77,0"/>
                            <ComboBox SelectedIndex="0" FontFamily="Comic Sans MS" Margin="3,12,209,-11" SelectionChanged="CuadroCombinadoSeleccionDificultad">
                                <ComboBoxItem Content="{x:Static language:Lang.principalTextoFacil}"/>
                                <ComboBoxItem Content="{x:Static language:Lang.principalTextoMedia}"/>
                                <ComboBoxItem Content="{x:Static language:Lang.principalTextoDificil}"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>

                    <Button Content="{x:Static language:Lang.principalTextoJugar}" 
                    FontFamily="Comic Sans MS" FontWeight="Bold"
                    Background="White" BorderBrush="Black"
                    Margin="0,257,0,10"
                    Click="BotonJugar" Grid.Row="1"/>
                </Grid>
            </Border>

            <!-- Columna Derecha: Amigos -->
            <Grid Grid.Column="1" Margin="362,0,10,5" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto" MinHeight="184.723"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="3" Height="264" VerticalAlignment="Top" Grid.RowSpan="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{x:Static language:Lang.principalTextoAmigos}" 
                       Grid.Row="0" HorizontalAlignment="Center"
                       FontWeight="Bold" FontSize="16" FontFamily="Comic Sans MS"/>

                        <Button Content="{x:Static language:Lang.globalTextoBuscarAmigo}" 
                    Grid.Row="1" Margin="0,10" Padding="5"
                    Background="White" BorderBrush="Black"
                    FontFamily="Comic Sans MS" Click="BotonBuscarAmigo"/>

                        <ListBox Grid.Row="2" BorderBrush="Gray" BorderThickness="1"
                        MinHeight="100" FontFamily="Comic Sans MS"/>

                        <Grid Grid.Row="3" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="{x:Static language:Lang.globalTextoSolicitudes}" 
                            Margin="0,0,10,0" Padding="5"
                            Background="White" BorderBrush="Black"
                            FontFamily="Comic Sans MS" Click="BotonSolicitudes"/>
                            <Button Grid.Column="1" Content="{x:Static language:Lang.eliminarAmigoTextoEliminar}" 
                            Margin="5,0,0,0" Padding="5"
                            Background="White" BorderBrush="Black"
                            FontFamily="Comic Sans MS" HorizontalAlignment="Stretch"
                            Click="BotonEliminarAmigo"/>
                        </Grid>
                    </Grid>
                </Border>

                <Button Content="{x:Static language:Lang.globalTextoInvitaciones}" 
                Margin="0,65,0,81" Padding="10"
                Background="White" BorderBrush="Black"
                FontFamily="Comic Sans MS" Grid.Row="1"
                Click="BotonInvitaciones"/>
            </Grid>
        </Grid>
    </Grid>
</Window>