<Window x:Class="PictionaryMusicalCliente.VentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.principalTextoTitulo}"
        Height="550" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <VisualBrush TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute"
                         Viewbox="0,0,40,40" ViewboxUnits="Absolute">
                <VisualBrush.Visual>
                    <Rectangle Stroke="LightGray" StrokeThickness="0.5" Width="40" Height="40"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecera: Usuario, Título, Ajustes -->
        <Grid Grid.Row="0" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Perfil de Usuario -->
            <Button x:Name="botonPerfilUsuario"
                    Grid.Column="0"
                    Content="{Binding NombreUsuario}"
                    Padding="10,5"
                    Background="White"
                    BorderBrush="Black"
                    FontFamily="Comic Sans MS"
                    Command="{Binding AbrirPerfilCommand}" Grid.ColumnSpan="2" Margin="0,27,674,23"/>

            <!-- Título Principal -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Text="{x:Static language:Lang.tituloTextoPictionary}"
                           FontSize="28" FontWeight="Bold" Foreground="Blue"
                           FontFamily="Comic Sans MS" TextAlignment="Center"/>
                <TextBlock Text="{x:Static language:Lang.tituloTextoMusical}"
                           FontSize="42" FontWeight="Bold" Foreground="Blue"
                           FontFamily="Times New Roman" TextAlignment="Center" Margin="0,-10,0,0"/>
            </StackPanel>

            <!-- Botón de Ajustes -->
            <Button Grid.Column="2"
                    Content="{x:Static language:Lang.globalTextoAjustes}"
                    FontFamily="Comic Sans MS"
                    Padding="15,5"
                    Background="White"
                    BorderBrush="Black"
                    VerticalAlignment="Center"
                    Command="{Binding AbrirAjustesCommand}"/>
        </Grid>

        <!-- Paneles centrales -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Columna Izquierda: Unirse a sala y otros -->
            <StackPanel Grid.Column="0" Margin="10,0">
                <Border Background="White" BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{x:Static language:Lang.globalTextoUnirseASala}"
                                   Grid.Row="0" HorizontalAlignment="Center"
                                   FontWeight="Bold" FontSize="16" FontFamily="Comic Sans MS"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{x:Static language:Lang.globalTextoIngreseCodigoPartida}"
                                   Grid.Row="1" FontFamily="Comic Sans MS" Margin="0,5"/>
                        <TextBox Grid.Row="2"
                                 Height="25"
                                 FontFamily="Comic Sans MS"
                                 Text="{Binding CodigoSala, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Grid.Row="3"
                                Content="{x:Static language:Lang.globalTextoUnirse}"
                                Margin="0,15,0,0"
                                Padding="5"
                                FontWeight="Bold"
                                Background="White"
                                BorderBrush="Black"
                                FontFamily="Comic Sans MS"
                                Command="{Binding UnirseSalaCommand}"/>
                    </Grid>
                </Border>
                <Button Content="{x:Static language:Lang.globalTextoComoJugar}"
                        Margin="0,20,0,0"
                        Padding="10"
                        Background="White"
                        BorderBrush="Black"
                        FontFamily="Comic Sans MS"
                        Command="{Binding AbrirComoJugarCommand}"/>
                <Button Content="{x:Static language:Lang.globalTextoClasificacion}"
                        Margin="0,10,0,0"
                        Padding="10"
                        Background="White"
                        BorderBrush="Black"
                        FontFamily="Comic Sans MS"
                        Command="{Binding AbrirClasificacionCommand}"/>
            </StackPanel>

            <!-- Columna Central: Crear una sala -->
            <Border Background="White" BorderBrush="Black" BorderThickness="2" Padding="20" CornerRadius="3"
                    Margin="10,0"
                    Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{x:Static language:Lang.principalTextoCrearSala}"
                               HorizontalAlignment="Center"
                               FontWeight="Bold" FontSize="18" FontFamily="Comic Sans MS"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,41,0,0">
                        <StackPanel Margin="0,5">
                            <TextBlock Text="{x:Static language:Lang.principalTextoNumeroRondas}"
                                       FontFamily="Comic Sans MS" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding NumeroRondasOpciones}"
                                      SelectedItem="{Binding NumeroRondasSeleccionada, Mode=TwoWay}"
                                      DisplayMemberPath="Descripcion"
                                      FontFamily="Comic Sans MS"
                                      SelectedIndex="0"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="{x:Static language:Lang.principalTextoTiempoRonda}"
                                       FontFamily="Comic Sans MS" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding TiempoRondaOpciones}"
                                      SelectedItem="{Binding TiempoRondaSeleccionada, Mode=TwoWay}"
                                      DisplayMemberPath="Descripcion"
                                      FontFamily="Comic Sans MS"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="{x:Static language:Lang.principalTextoIdiomaCanciones}"
                                       FontFamily="Comic Sans MS" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding IdiomasDisponibles}"
                                      SelectedItem="{Binding IdiomaSeleccionado, Mode=TwoWay}"
                                      DisplayMemberPath="Descripcion"
                                      FontFamily="Comic Sans MS"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="{x:Static language:Lang.principalTextoDificultad}"
                                       FontFamily="Comic Sans MS" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding DificultadesDisponibles}"
                                      SelectedItem="{Binding DificultadSeleccionada, Mode=TwoWay}"
                                      DisplayMemberPath="Descripcion"
                                      FontFamily="Comic Sans MS"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Row="1"
                            Content="{x:Static language:Lang.principalTextoJugar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Margin="0,297,0,0"
                            Command="{Binding IniciarJuegoCommand}" Grid.RowSpan="2"/>
                </Grid>
            </Border>

            <!-- Columna Derecha: Amigos -->
            <Grid Grid.Column="2" Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{x:Static language:Lang.principalTextoAmigos}"
                                   Grid.Row="0" HorizontalAlignment="Center"
                                   FontWeight="Bold" FontSize="16" FontFamily="Comic Sans MS"/>
                        <Button Content="{x:Static language:Lang.globalTextoBuscarAmigo}"
                                Grid.Row="1"
                                Margin="0,10,0,0"
                                Padding="5"
                                Background="White"
                                BorderBrush="Black"
                                FontFamily="Comic Sans MS"
                                Command="{Binding AbrirBuscarAmigoCommand}"/>
                        <ListBox Grid.Row="2"
                                 BorderBrush="Gray"
                                 BorderThickness="1"
                                 MinHeight="100"
                                 FontFamily="Comic Sans MS"
                                 ItemsSource="{Binding Amigos}"/>
                        <Grid Grid.Row="3" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Content="{x:Static language:Lang.globalTextoSolicitudes}"
                                    Margin="0,0,5,0"
                                    Padding="5"
                                    Background="White"
                                    BorderBrush="Black"
                                    FontFamily="Comic Sans MS"
                                    Command="{Binding AbrirSolicitudesCommand}"/>
                            <Button Grid.Column="1"
                                    Content="{x:Static language:Lang.eliminarAmigoTextoEliminar}"
                                    Margin="5,0,0,0"
                                    Padding="5"
                                    Background="White"
                                    BorderBrush="Black"
                                    FontFamily="Comic Sans MS"
                                    Command="{Binding AbrirEliminarAmigoCommand}"/>
                        </Grid>
                    </Grid>
                </Border>

                <Button Grid.Row="1"
                        Content="{x:Static language:Lang.globalTextoInvitaciones}"
                        Margin="0,20,0,0"
                        Padding="10"
                        Background="White"
                        BorderBrush="Black"
                        FontFamily="Comic Sans MS"
                        Command="{Binding AbrirInvitacionesCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
