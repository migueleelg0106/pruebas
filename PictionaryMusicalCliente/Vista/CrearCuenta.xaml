<Window x:Class="PictionaryMusicalCliente.CrearCuenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        xmlns:convertidores="clr-namespace:PictionaryMusicalCliente.Convertidores"
        Title="{x:Static language:Lang.tituloTextoRegistroUsuarios}" Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Window.Resources>
        <convertidores:ConvertidorBooleanoVisibilidad x:Key="BooleanoVisibilidadConverter"/>
        <convertidores:ConvertidorBooleanoInverso x:Key="BooleanoInverso"/>
    </Window.Resources>

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" MinHeight="52"/>
                    <RowDefinition Height="Auto" MinHeight="76"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="{x:Static language:Lang.crearCuentaTextoDatosSolicitados}"
                           FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="15"
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="20,0,0,0">
                        <Ellipse Width="60" Height="60"
                                 Stroke="Black" StrokeThickness="1">
                            <Ellipse.Fill>
                                <ImageBrush Stretch="UniformToFill" ImageSource="{Binding AvatarSeleccionadoImagen}"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Label Content="{x:Static language:Lang.globalTextoSeleccionarAvatar}"
                               Foreground="Blue" Cursor="Hand"
                               FontFamily="Comic Sans MS" HorizontalAlignment="Center">
                            <Label.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding SeleccionarAvatarCommand}"/>
                            </Label.InputBindings>
                        </Label>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="10,0">
                        <Label Content="{x:Static language:Lang.globalTextoUsuario}"
                               ContentStringFormat="{}{0}:" FontWeight="Bold" FontFamily="Comic Sans MS"/>
                        <TextBox x:Name="bloqueTextoUsuario" Height="25" FontFamily="Comic Sans MS"
                                 Text="{Binding Usuario, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="{x:Static language:Lang.errorTextoUsuarioEnUso}" Foreground="Red"
                               Visibility="{Binding MostrarErrorUsuario, Converter={StaticResource BooleanoVisibilidadConverter}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0">
                        <Label Content="{x:Static language:Lang.globalTextoNombre}"
                               ContentStringFormat="{}{0}:" FontWeight="Bold" FontFamily="Comic Sans MS"/>
                        <TextBox x:Name="bloqueTextoNombre" Height="25" FontFamily="Comic Sans MS"
                                 Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="10,0">
                        <Label Content="{x:Static language:Lang.globalTextoApellido}"
                               ContentStringFormat="{}{0}:" FontWeight="Bold" FontFamily="Comic Sans MS"/>
                        <TextBox x:Name="bloqueTextoApellido" Height="25" FontFamily="Comic Sans MS"
                                 Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0">
                        <Label Content="{x:Static language:Lang.globalTextoCorreo}"
                               ContentStringFormat="{}{0}:" FontWeight="Bold" FontFamily="Comic Sans MS"/>
                        <TextBox x:Name="bloqueTextoCorreo" Height="25" FontFamily="Comic Sans MS"
                                 Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="{x:Static language:Lang.errorTextoCorreoEnUso}" Foreground="Red"
                               Visibility="{Binding MostrarErrorCorreo, Converter={StaticResource BooleanoVisibilidadConverter}}"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="3" Margin="10,5,10,0">
                    <Label Content="{x:Static language:Lang.globalTextoContrasena}"
                           ContentStringFormat="{}{0}:" FontWeight="Bold" FontFamily="Comic Sans MS"/>
                    <PasswordBox x:Name="bloqueContrasena" Height="25" FontFamily="Comic Sans MS"
                                 PasswordChanged="PasswordBoxChanged"/>
                </StackPanel>

                <TextBlock Text="{x:Static language:Lang.globalTextoEspecificaContrasena}"
                           FontSize="11" Foreground="Blue" TextWrapping="Wrap"
                           Margin="10,10,10,0" Grid.Row="4"/>

                <Grid Grid.Row="5" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="{x:Static language:Lang.globalTextoCrearCuenta}"
                            FontFamily="Comic Sans MS" Height="40"
                            Background="White" BorderBrush="Black" FontWeight="Bold"
                            Grid.Column="0" Margin="10"
                            Command="{Binding CrearCuentaCommand}"
                            IsEnabled="{Binding EstaProcesando, Converter={StaticResource BooleanoInverso}}"/>

                    <Button Content="{x:Static language:Lang.globalTextoCancelar}"
                            FontFamily="Comic Sans MS" Height="40"
                            Background="White" BorderBrush="Black"
                            Grid.Column="1" Margin="10"
                            Command="{Binding CancelarCommand}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
