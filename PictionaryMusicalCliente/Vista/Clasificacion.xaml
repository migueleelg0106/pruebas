<Window x:Class="PictionaryMusicalCliente.Clasificacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.globalTextoClasificacion}" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Loaded="VentanaCargada">
    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2" Padding="20" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.globalTextoClasificacion}" FontFamily="Comic Sans MS" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <DataGrid x:Name="TablaClasificacion" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" FontFamily="Comic Sans MS" FontSize="14" HeadersVisibility="Column" CanUserAddRows="False" CanUserResizeRows="False" CanUserResizeColumns="False" CanUserSortColumns="False" Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static language:Lang.globalTextoUsuario}" Binding="{Binding Usuario}" Width="165"/>
                        <DataGridTextColumn Header="{x:Static language:Lang.clasificacionTextoTotalRondas}" Binding="{Binding RondasGanadas}" Width="*"/>
                        <DataGridTextColumn Header="{x:Static language:Lang.clasificacionTextoTotalPuntos}" Binding="{Binding Puntos}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="2" Content="{x:Static language:Lang.globalTextoRegresar}" Margin="0,20,0,0" Height="40" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonRegresar"/>
            </Grid>
        </Border>
    </Grid>
</Window>
