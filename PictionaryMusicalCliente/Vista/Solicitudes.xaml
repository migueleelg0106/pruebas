<Window x:Class="PictionaryMusicalCliente.Solicitudes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.globalTextoSolicitudes}" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="380" Height="410">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto" MinHeight="127.98"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.globalTextoSolicitudes}" FontFamily="Comic Sans MS" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Width="202"/>

                <!-- Utiliza un ItemsControl para mostrar la lista de solicitudes -->
                <ItemsControl Margin="0,59,0,0" Grid.RowSpan="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding NombreUsuario}" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="16"/>
                                <!-- Botones para Aceptar y Rechazar -->
                                <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" Margin="10,0" Cursor="Hand">
                                    <Image Source="/Resources/aceptar.png" Width="24" Height="24"/>
                                </Button>
                                <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" Cursor="Hand">
                                    <Image Source="/Resources/rechazar.png" Width="24" Height="24"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <!-- Aquí añadirías los items desde el code-behind. Estos son ejemplos visuales. -->
                    <ItemsControl.Items>
                        <TextBlock Text="" Margin="0,5" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="16"/>
                        <TextBlock Text="" Margin="0,5" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="16"/>
                    </ItemsControl.Items>
                </ItemsControl>

                <Button Grid.Row="2" Content="{x:Static language:Lang.globalTextoAceptar}" Margin="10,32,168,54" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonAceptar"/>
                <Button Grid.Row="2" Content="{x:Static language:Lang.globalTextoEliminar}" Margin="173,32,10,54" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonCancelar"/>
                <Button Grid.Row="2" Content="{x:Static language:Lang.globalTextoRegresar}" Margin="0,86,0,0" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonRegresar"/>
            </Grid>
        </Border>
    </Grid>
</Window>