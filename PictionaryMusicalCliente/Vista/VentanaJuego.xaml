<Window x:Class="PictionaryMusicalCliente.VentanaJuego"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.partidaAdminTextoIniciarPartida}"
        Width="1180" Height="730" WindowStartupLocation="CenterScreen"
        Background="Wheat">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- ======= Panel Izquierdo ======= -->
        <StackPanel Grid.Column="0" Margin="8" Background="Wheat">

            <!-- Invitaciones a amigos -->
            <Border Margin="6" Background="White" BorderBrush="Black" BorderThickness="2"  CornerRadius="3">
                <ListBox  FontFamily="Comic Sans MS" Height="148"/>
            </Border>

            <!-- Fragmento: Invitar por correo -->
            <Border Margin="6" Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="3">
                <StackPanel Margin="8">
                    <TextBlock Text="{x:Static language:Lang.globalTextoCorreo}" FontWeight="Bold" Margin="0,0,0,6" HorizontalAlignment="Center" FontFamily="Comic Sans MS"/>
                    <TextBox Height="28" Margin="0,0,0,6"/>
                    <Button Content="{x:Static language:Lang.partidaAdminTextoInvitarCorreo}" Background="LightGreen" FontFamily="Comic Sans MS" Click="BotonInvitarCorreo"/>
                </StackPanel>
            </Border>

            <!-- Fragmento: Código -->
            <Border Margin="6" Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="3" Width="147">
                <StackPanel Margin="8">
                    <TextBlock Text="{x:Static language:Lang.partidaTextoCodigo}" FontWeight="Bold" Margin="0,0,0,0" FontFamily="Comic Sans MS"/>
                </StackPanel>
            </Border>

            <!-- Fragmento: Ajustes -->
            <StackPanel Margin="0,300,0,0">
                <Button Name="botonAjustesPartida" Content="{x:Static language:Lang.globalTextoAjustes}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                Height="35" Width="107" FontFamily="Comic Sans MS" Click="BotonAjustes"/>
            </StackPanel>

        </StackPanel>

        <!-- ======= Panel Central ======= -->
        <Grid Grid.Column="1" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <DockPanel Grid.Row="0" Background="Red">
                <TextBlock Text="{x:Static language:Lang.partidaTextoRonda}" Foreground="Black" FontSize="18"
                           VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="Comic Sans MS"/>
                <TextBlock Text="-------" Foreground="Black" FontSize="20" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS"/>
            </DockPanel>

            <!-- Lienzo con borde y herramientas (ocultos hasta iniciar) -->
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!-- Área de dibujo (oculta al inicio) -->
                        <RowDefinition Height="Auto" />
                        <!-- Botón Iniciar -->
                    </Grid.RowDefinitions>

                    <!-- ===== Área de dibujo (OCULTA) ===== -->
                    <Grid x:Name="grdDibujo" Grid.Row="0" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Barra de herramientas -->
                            <RowDefinition Height="*"/>
                            <!-- Lienzo -->
                        </Grid.RowDefinitions>

                        <!-- Barra de herramientas (solo iconos) -->
                        <DockPanel Grid.Row="0" Margin="4">
                            <!-- Herramientas -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,8,0">
                                <ToggleButton x:Name="tbtnLapiz" Content="✏️" Width="40" Height="32" Margin="0,0,4,0"
                                        Cursor="Hand" Click="tbtnLapiz_Click"/>
                                <ToggleButton x:Name="tbtnBorrador" Content="🧼" Width="40" Height="32" Margin="0,0,4,0"
                                        Cursor="Hand" Click="tbtnBorrador_Click"/>
                                <Button x:Name="btnLimpiar" Content="🧹" Width="40" Height="32" Margin="0,0,4,0"
                                        Click="btnBorrar_Click"/>

                            </StackPanel>

                            <!-- Grosor -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,8,0">
                                <Button Tag="2" Click="Grosor_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="6" Height="6" Fill="Black"/>
                                </Button>
                                <Button Tag="6" Click="Grosor_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="12" Height="12" Fill="Black"/>
                                </Button>
                                <Button Tag="12" Click="Grosor_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="18" Height="18" Fill="Black"/>
                                </Button>
                            </StackPanel>

                            <!-- Colores -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <Button Tag="Black" Click="Color_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="18" Height="18" Fill="Black" Stroke="#333" StrokeThickness="0.5"/>
                                </Button>
                                <Button Tag="Red" Click="Color_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="18" Height="18" Fill="Red" Stroke="#333" StrokeThickness="0.5"/>
                                </Button>
                                <Button Tag="Blue" Click="Color_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="18" Height="18" Fill="Blue" Stroke="#333" StrokeThickness="0.5"/>
                                </Button>
                                <Button Tag="Green" Click="Color_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="18" Height="18" Fill="Green" Stroke="#333" StrokeThickness="0.5"/>
                                </Button>
                                <Button Tag="Orange" Click="Color_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="18" Height="18" Fill="Orange" Stroke="#333" StrokeThickness="0.5"/>
                                </Button>
                                <Button Tag="Purple" Click="Color_Click" Width="28" Height="28" Margin="2">
                                    <Ellipse Width="18" Height="18" Fill="Purple" Stroke="#333" StrokeThickness="0.5"/>
                                </Button>
                            </StackPanel>
                        </DockPanel>

                        <!-- Lienzo -->
                        <InkCanvas x:Name="ink" Grid.Row="1" Margin="4" Background="White"/>
                    </Grid>

                    <!-- ===== Botón Iniciar partida ===== -->
                    <Button x:Name="botonIniciarPartida"
                Grid.Row="1"
                Content="{x:Static language:Lang.partidaAdminTextoIniciarPartida}"
                Width="150" Height="42"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,8,0,10"
                FontFamily="Comic Sans MS" FontWeight="Bold"
                Background="White" BorderBrush="Black"
                Click="BotonIniciarPartida"/>
                </Grid>
            </Border>



            <!-- Franja roja inferior (reservada a otros datos) -->
            <Grid Grid.Row="2" Background="Red"/>
        </Grid>

        <!-- ======= Panel Derecho (Chat) ======= -->
        <Grid Grid.Column="2" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="LightYellow" BorderBrush="#FFD7D7A8" BorderThickness="1">
                <TextBlock Text="{x:Static language:Lang.partidaTextoChat}" FontWeight="Bold" FontSize="16"
                           VerticalAlignment="Center" Margin="8,0,0,0" FontFamily="Comic Sans MS"/>
            </Border>

            <ScrollViewer Grid.Row="1" Background="White" BorderBrush="Black" BorderThickness="1">
                <StackPanel x:Name="ChatPanel" Margin="6"/>
            </ScrollViewer>

            <TextBox Grid.Row="2" Background="LightYellow" BorderBrush="Black" BorderThickness="1"/>
        </Grid>
    </Grid>
</Window>




