<Window x:Class="PictionaryMusicalCliente.Invitaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.globalTextoInvitaciones}" Height="457" Width="494"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2" Padding="20" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto" MinHeight="107.98"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.globalTextoInvitaciones}" FontFamily="Comic Sans MS" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Width="226"/>

                <!-- Lista de invitaciones -->
                <ItemsControl Margin="0,59,0,0" Grid.RowSpan="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding MensajeInvitacion}" TextWrapping="Wrap" FontFamily="Comic Sans MS" FontSize="14" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="{x:Static language:Lang.globalTextoUnirse}" FontFamily="Comic Sans MS" Background="White" BorderBrush="Black" Height="35" Width="80" VerticalAlignment="Center" Margin="10,0"/>
                                <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" VerticalAlignment="Center">
                                    <Image Source="/Resources/rechazar.png" Width="24" Height="24"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <!-- Ejemplos visuales -->
                    <ItemsControl.Items>
                        <TextBlock Text="" TextWrapping="Wrap" FontFamily="Comic Sans MS" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Text="" TextWrapping="Wrap" FontFamily="Comic Sans MS" FontSize="14"/>
                    </ItemsControl.Items>
                </ItemsControl>

                <Button Grid.Row="2" Content="{x:Static language:Lang.globalTextoUnirse}" Margin="10,54,228,9" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonUnirse"/>
                <Button Grid.Row="2" Content="{x:Static language:Lang.globalTextoRegresar}" Margin="242,54,0,9" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonRegresar"/>
            </Grid>
        </Border>
    </Grid>
</Window>