<Window x:Class="PictionaryMusicalCliente.CerrarSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.ajustesPrincipalTextoCerrarSesion}" Height="250" Width="450"
        
    WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2" 
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Título del Diálogo -->
                <TextBlock Text="{x:Static language:Lang.ajustesPrincipalTextoCerrarSesion}" 
                           FontFamily="Comic Sans MS" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>


                <TextBlock Text="{x:Static language:Lang.cerrarSesionTextoConfirmacion}" 
                           TextWrapping="Wrap" TextAlignment="Center"
                           FontFamily="Comic Sans MS" FontSize="16" 
                           Margin="0,15,0,20"/>

                <!-- Botones de Acción -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="{x:Static language:Lang.globalTextoAceptar}" 
                            Grid.Column="0" Margin="0,0,5,0" Height="40" 
                            FontFamily="Comic Sans MS" FontWeight="Bold" 
                            Background="White" BorderBrush="Black"
                            Click="BotonAceptar"/>

                    <Button Content="{x:Static language:Lang.globalTextoCancelar}" 
                            Grid.Column="1" Margin="5,0,0,0" Height="40" 
                            FontFamily="Comic Sans MS" FontWeight="Bold" 
                            Background="White" BorderBrush="Black"
                            Click="BotonCancelar"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>