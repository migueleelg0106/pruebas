<Window x:Class="PictionaryMusicalCliente.Ajustes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.globalTextoAjustes}" Height="282" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2" Padding="20" CornerRadius="3">
            <StackPanel>
                <TextBlock Text="{x:Static language:Lang.globalTextoAjustes}" FontFamily="Comic Sans MS" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static language:Lang.globalTextoVolumenCanciones}" FontFamily="Comic Sans MS" FontSize="14" VerticalAlignment="Center"/>
                    <Slider Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static language:Lang.globalTextoEfectosSonido}" FontFamily="Comic Sans MS" FontSize="14" VerticalAlignment="Center" Margin="0,15,0,0"/>
                    <CheckBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="94,19,84,0" IsChecked="True"/>
                </Grid>

                <Button Content="{x:Static language:Lang.globalTextoConfirmar}" Margin="0,30,0,5" Height="40" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonConfirmar"/>
                <Button Content="{x:Static language:Lang.ajustesPrincipalTextoCerrarSesion}" Margin="0,5,0,0" Height="40" FontFamily="Comic Sans MS" FontWeight="Bold" Background="White" BorderBrush="Black" Click="BotonCerrarSesion">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="Red"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>