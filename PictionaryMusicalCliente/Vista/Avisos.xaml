<Window x:Class="PictionaryMusicalCliente.Avisos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="a"
        Height="250" Width="300"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="240" VerticalAlignment="Center">

                <TextBlock Text="{x:Static language:Lang.alertaAviso}"
                           TextWrapping="Wrap" TextAlignment="Center"
                           FontFamily="Comic Sans MS" FontSize="18"
                           FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock x:Name="textoMensaje"
                           TextWrapping="Wrap" TextAlignment="Center"
                           FontFamily="Comic Sans MS" FontSize="14"
                           Margin="0,0,0,20"/>

                <Button Content="{x:Static language:Lang.globalTextoAceptar}"
                        Height="40" Width="120"
                        FontFamily="Comic Sans MS" FontWeight="Bold"
                        Background="White" BorderBrush="Black"
                        HorizontalAlignment="Center" IsDefault="True"
                        Click="botonAceptar"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
