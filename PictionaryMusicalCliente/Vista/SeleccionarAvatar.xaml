<Window x:Class="PictionaryMusicalCliente.SeleccionarAvatar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.globalTextoSeleccionarAvatar}"
        Height="450" Width="420"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None"
        Background="Transparent">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3">
            <StackPanel>
                <!-- ===== Avatares en 4x4 ===== -->
                <ListBox x:Name="listaAvatares"
                         BorderThickness="0"
                         SelectionMode="Single"
                         ItemsSource="{Binding Avatares}"
                         SelectedItem="{Binding AvatarSeleccionado, Mode=TwoWay}"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- 4 columnas × 4 filas -->
                            <UniformGrid Columns="4" Rows="4"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Imagen}"
                                   Width="64"
                                   Height="64"
                                   Margin="5"
                                   Cursor="Hand"
                                   ToolTip="{Binding Nombre}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Botón Aceptar -->
                <Button x:Name="botonAceptarSeleccionAvatar"
                        Content="{x:Static language:Lang.globalTextoAceptar}"
                        Margin="0,14,0,0" Height="40" Width="140"
                        HorizontalAlignment="Center"
                        FontFamily="Comic Sans MS" FontWeight="Bold"
                        Background="White" BorderBrush="Black"
                        Command="{Binding ConfirmarSeleccionCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
