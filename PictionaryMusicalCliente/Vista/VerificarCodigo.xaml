<Window x:Class="PictionaryMusicalCliente.VerificarCodigo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        xmlns:convertidores="clr-namespace:PictionaryMusicalCliente.Convertidores"
        Title="{x:Static language:Lang.cambiarContrasenaTextoCodigoVerificacion}"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Window.Resources>
        <convertidores:ConvertidorBooleanoInverso x:Key="BooleanoInverso" />
    </Window.Resources>

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="356" VerticalAlignment="Center">

                <TextBlock Text="{Binding Descripcion}"
                           TextWrapping="Wrap" TextAlignment="Center"
                           FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" />

                <TextBox x:Name="bloqueTextoCodigoVerificacion"
                         Height="30" Margin="0,12,0,16" FontFamily="Comic Sans MS"
                         HorizontalAlignment="Center" Width="237"
                         Text="{Binding CodigoVerificacion, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="{x:Static language:Lang.cambiarContrasenaTextoVerificar}"
                        Height="47" FontFamily="Comic Sans MS" FontWeight="Bold"
                        Background="White" BorderBrush="Black" Width="136"
                        Command="{Binding VerificarCodigoCommand}"
                        IsEnabled="{Binding EstaVerificando, Converter={StaticResource BooleanoInverso}}"/>

                <Grid Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Height="36"
                            Content="{Binding TextoBotonReenviar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding ReenviarCodigoCommand}"
                            IsEnabled="{Binding PuedeReenviar}"/>

                    <Button Grid.Column="1" Height="36"
                            Content="{x:Static language:Lang.globalTextoCancelar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Command="{Binding CancelarCommand}" Margin="24,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
