<Window x:Class="PictionaryMusicalCliente.VerificarCodigo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        Title="{x:Static language:Lang.cambiarContraseñaTextoCodigoVerificacion}"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="356" VerticalAlignment="Center">

                <TextBlock x:Name="textoDescripcion" Text="{x:Static language:Lang.cambiarContraseñaTextoCodigoVerificacion}"
                           TextWrapping="Wrap" TextAlignment="Center"
                           FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" />

                <TextBox x:Name="bloqueTextoCodigoVerificacion"
                         Height="30" Margin="0,12,0,16" FontFamily="Comic Sans MS"
                         HorizontalAlignment="Center" Width="237"/>

                <Button x:Name="botonVerificarCodigo"
                        Content="{x:Static language:Lang.cambiarContraseñaTextoVerificar}"
                        Height="47" FontFamily="Comic Sans MS" FontWeight="Bold"
                        Background="White" BorderBrush="Black"
                        Click="BotonVerificarCodigo" Width="136" />

                <Grid Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="botonReenviarCodigo"
                            Grid.Column="0" Height="36"
                            Content="{x:Static language:Lang.cambiarContraseñaTextoReenviarCodigo}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Click="BotonReenviarCodigo"/>

                    <Button x:Name="botonCancelarCodigo"
                            Grid.Column="1" Height="36"
                            Content="{x:Static language:Lang.globalTextoCancelar}"
                            FontFamily="Comic Sans MS" FontWeight="Bold"
                            Background="White" BorderBrush="Black"
                            Click="BotonCancelarCodigo" Margin="24,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>

