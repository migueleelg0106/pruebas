<Window x:Class="PictionaryMusicalCliente.CambioContrasena"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:PictionaryMusicalCliente.Properties.Langs"
        xmlns:convertidores="clr-namespace:PictionaryMusicalCliente.Convertidores"
        Title="{x:Static language:Lang.cambiarContrasenaTextoIngresaNuevaContrasena}"
        Height="320" Width="300"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Window.Resources>
        <convertidores:ConvertidorBooleanoInverso x:Key="BooleanoInverso" />
    </Window.Resources>

    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="2"
                Padding="20" CornerRadius="3"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" Width="240">
                <TextBlock Text="{x:Static language:Lang.cambiarContrasenaTextoIngresaNuevaContrasena}"
                           FontFamily="Comic Sans MS" FontSize="14" FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <PasswordBox x:Name="bloqueContrasenaNueva"
                             Height="28" Margin="0,8,0,10" FontFamily="Comic Sans MS"
                             PasswordChanged="ContrasenaNuevaPasswordChanged"/>

                <TextBlock Text="{x:Static language:Lang.cambiarContrasenaTextoConfirmeContrasena}"
                           FontFamily="Comic Sans MS" FontStyle="Italic" Foreground="Blue"
                           HorizontalAlignment="Center"/>

                <PasswordBox x:Name="bloqueContrasenaConfirmacion"
                             Height="28" Margin="0,6,0,16" FontFamily="Comic Sans MS"
                             PasswordChanged="ContrasenaConfirmacionPasswordChanged"/>

                <Button x:Name="botonConfirmarContrasena"
                        Content="{x:Static language:Lang.globalTextoConfirmar}"
                        Height="44" FontFamily="Comic Sans MS" FontWeight="Bold"
                        Background="White" BorderBrush="Black"
                        Command="{Binding ConfirmarCommand}"
                        IsEnabled="{Binding EstaProcesando, Converter={StaticResource BooleanoInverso}}"/>

                <Button x:Name="botonCancelarContrasena"
                        Content="{x:Static language:Lang.globalTextoCancelar}"
                        Height="32" Width="120" Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontFamily="Comic Sans MS"
                        Background="White" BorderBrush="Black"
                        Command="{Binding CancelarCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
